<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="DEPT">

	<resultMap id="BaseResultMap" type="com.icss.oa.system.pojo.Dept">
		<id column="DEPT_ID" property="deptId" jdbcType="DECIMAL" />
		<result column="DEPT_NAME" property="deptName" jdbcType="VARCHAR" />
		<result column="DEPT_LOC" property="deptLoc" jdbcType="VARCHAR" />
	</resultMap>

	<insert id="insert" parameterType="com.icss.oa.system.pojo.Dept">
		insert into DEPT (DEPT_ID,
		DEPT_NAME, DEPT_LOC
		)
		values (dept_seq.nextval,
		#{deptName,jdbcType=VARCHAR},
		#{deptLoc,jdbcType=VARCHAR}
		)
	</insert>

	<update id="update" parameterType="com.icss.oa.system.pojo.Dept">
		update DEPT
		set DEPT_NAME =
		#{deptName,jdbcType=VARCHAR},
		DEPT_LOC = #{deptLoc,jdbcType=VARCHAR}
		where DEPT_ID = #{deptId,jdbcType=DECIMAL}
	</update>

	<delete id="delete" parameterType="java.lang.Integer">
		delete from DEPT
		where DEPT_ID
		= #{deptId,jdbcType=DECIMAL}
	</delete>

	<select id="queryById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select *
		from DEPT
		where DEPT_ID = #{deptId,jdbcType=DECIMAL}
	</select>

	<select id="query" resultMap="BaseResultMap">
		select * from (select rownum
		rnum,d.* from dept d
		order by dept_id desc)
		where rnum between #{start} and #{end}
	</select>

	<select id="getCount" resultType="java.lang.Integer">
		select
		count(*)
		from DEPT
	</select>
</mapper>